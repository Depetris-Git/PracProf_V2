@inherits LayoutComponentBase
@inject ServicioRol ServicioRol

<div class="page">
    <div class="sidebar">
        <!-- Pasamos el rol al componente NavMenu. Usamos el método ObtenerRol() para obtener el rol actualizado. -->
        <NavMenu Role="@ServicioRol.ObtenerRol()" />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

