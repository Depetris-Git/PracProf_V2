@using WebITSC.Admin.Client.Servicios

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">ITSC - Login</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<!-- Menú de navegación visible solo para Administradores -->
@if (Role == "Administrador")
{
    <div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
        <nav class="flex-column">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/Inicio" Match="NavLinkMatch.All">
                    <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Inicio
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/Administracion/ListaAlumnos">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Alumnos
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="api/Nota">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Nota Final
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/GenerarCertificado">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Generar Certificado
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/MateriasPlanEstudio">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Ver Materias en Planes
                </NavLink>
            </div>
            <!-- Enlace Swagger -->
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="https://localhost:7118/swagger" target="_blank">
                    <span class="bi bi-engranaje-nav-menu" aria-hidden="true"></span> Swagger
                </NavLink>
            </div>
        </nav>
    </div>
}

@if (Role == "Profesor")
{
    <!-- Menú para profesores -->
    <div class="nav-item px-3">
        <NavLink class="nav-link" href="/Inicio" Match="NavLinkMatch.All">
            <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Inicio
        </NavLink>
    </div>
    <div class="nav-item px-3">
        <NavLink class="nav-link" href="https://localhost:7118/swagger" target="_blank">
            <span class="bi bi-engranaje-nav-menu" aria-hidden="true"></span> Swagger
        </NavLink>
    </div>
}

@if (Role == "Alumno")
{
    <!-- Menú para alumnos -->
    <div class="nav-item px-3">
        <NavLink class="nav-link" href="/Inicio" Match="NavLinkMatch.All">
            <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Inicio
        </NavLink>
    </div>
    <div class="nav-item px-3">
        <NavLink class="nav-link" href="https://localhost:7118/swagger" target="_blank">
            <span class="bi bi-engranaje-nav-menu" aria-hidden="true"></span> Swagger
        </NavLink>
    </div>
}

@code {
    [Parameter] public string Role { get; set; }

    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
